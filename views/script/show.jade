extends ../layout

block content
	.panel.panel-default
		.panel-heading
			span 타입: #{script.type}
		.panel-body
			.well.scripts
				each s in scripts
					&nbsp#{s.text}
		.panel-footer
			form(role='form', method='post', action='/scripts/#{script._id}/write')
				.form-group
					textarea(class='form-control', rows='5', name='text')
				button(type='submit', class='btn btn-default') 작성
