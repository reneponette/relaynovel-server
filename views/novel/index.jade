extends ../layout

block content
	.panel.panel-default
		.panel-heading
			if session.user
				a(href='/novels/new'): buttton.btn.btn-default.pull-right New			
			h2.title= title
		.panel-body
			table.table.table-striped
				thead
					tr
						th title
						th owner
						th type

				tbody
					each novel in novels
						tr
							td: a(href='/branches/#{novel.t_branch}') #{novel.title}
							td=novel.owner.nickname
							td=novel.type

